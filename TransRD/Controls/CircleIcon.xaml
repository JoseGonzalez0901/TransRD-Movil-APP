<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransRD.Controls.CircleIcon"
             x:Name="root">
    <Frame
        WidthRequest="{Binding Size, Source={x:Reference root}}"
        HeightRequest="{Binding Size, Source={x:Reference root}}"
        CornerRadius="{Binding Radius, Source={x:Reference root}}"
        BackgroundColor="{Binding BackgroundColor, Source={x:Reference root}}"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        HasShadow="False"
        Padding="0">

        <Image
            Source="{Binding ImageSource, Source={x:Reference root}}"
            WidthRequest="{Binding IconSize, Source={x:Reference root}}"
            HeightRequest="{Binding IconSize, Source={x:Reference root}}"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Aspect="AspectFit" />
    </Frame>
</ContentView>

